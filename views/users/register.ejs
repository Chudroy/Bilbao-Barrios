<% layout("layouts/boilerplate") %>
<h1>Register</h1>
<form action="/register" method="POST" novalidate class="validated-form">
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      name="user[username]"
      id="username"
      required
    />
    <div class="invalid-feedback">Please write a valid username.</div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="email">Email</label>
    <input
      class="form-control"
      type="email"
      name="user[email]"
      id="email"
      required
    />
    <div class="invalid-feedback">Please write a valid email.</div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      name="user[password]"
      id="password"
      required
    />
    <div class="invalid-feedback">Please write a valid password.</div>
  </div>

  <button class="btn btn-success">Submit</button>
</form>

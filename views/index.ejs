<% layout("layouts/boilerplate") %>

<div class="card mb-3" style="max-width: 540px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="..." class="img-fluid rounded-start" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">
          This is a wider card with supporting text below as a natural lead-in
          to additional content. This content is a little bit longer.
        </p>
        <p class="card-text">
          <small class="text-muted">Last updated 3 mins ago</small>
        </p>
      </div>
    </div>
  </div>
</div>

<% for( let index=posts.length-1; index>= 0 ; index--) { %>
<div class="col-md-12">
  <div class="card shadow mb-3">
    <div class="row g-0">
      <div class="col-md-4 d-flex flex-column bg-bilbaoLight">
        <% if (posts[index].image) { %>
        <div class="flex-grow-1">
          <img
            src="<%=posts[index].image.url%> "
            class="align-self-center rounded img-fluid"
          />
        </div>
        <% } %>
        <div class="d-flex align-items-end">
          <a
            href="post/<%=posts[index]._id%> "
            class="btn btn-bilbaotheme text-light ms-3"
            >View</a
          >
        </div>
      </div>

      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title"><%= posts[index].title %></h3>
          <p class="card-text"><%=posts[index].content%></p>
          <p class="card-text"><small class="text-muted">X Replies</small></p>
          <p class="card-text">
            <small class="text-muted">Last updated 3 mins ago</small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<% } %>

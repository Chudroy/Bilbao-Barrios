<div class="card position-fixed">
  <div class="card-body">
    <!-- Accordion -->
    <div class="accordion accordion-flush" id="accordionFlushExample">
      <form action="/" method="POST">
        <% for( let index = 0; index < neighbourhoods.length; index++ ) { %>
        <div class="accordion-item">
          <div
            class="accordion-header d-flex justify-content-between align-items-center"
            id="flush-heading<%=index%>"
          >
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#flush-collapse<%=index%>"
              aria-expanded="false"
              aria-controls="flush-collapse<%=index%>"
            >
              <div><%= neighbourhoods[index].district %></div>
            </button>
            <div class="ms-1">
              <label class="form-check-label" for="district">
                <input
                  class="form-check-input districtCheckbox<%=index%>"
                  type="checkbox"
                  value=""
                  id=""
                />
              </label>
            </div>
          </div>

          <div
            id="flush-collapse<%=index%>"
            class="accordion-collapse collapse"
            aria-labelledby="flush-heading<%=index%>"
          >
            <div class="accordion-body">
              <ul class="list-group list-group-flush">
                <% for( let j = 0; j <
                neighbourhoods[index].neighbourhoods.length; j++ ) { %>
                <li class="list-group-item p-0">
                  <div class="form-check p-0">
                    <label
                      class="form-check-label d-flex justify-content-between"
                      for="neighbourhood"
                    >
                      <%= neighbourhoods[index].neighbourhoods[j]%>
                      <input
                        class="form-check-input nbCheckbox<%=index%>"
                        type="checkbox"
                        value="<%=neighbourhoods[index].neighbourhoods[j]%>"
                        id=""
                        name="neighbourhoods[]"
                      />
                    </label>
                  </div>
                </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
        <% } %>
        <div class="mt-3 text-center">
          <button
            type="submit"
            class="btn btn-bilbaotheme text-light"
            id="nbSearch"
          >
            Search
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Neighbourhoods -->
<% const neighbourhoods = [ { district: "Deusto", neighbourhoods: [ "Arangoiti",
"Ibarrekolanda", "San Inazio", "Deusto", ], }, { district: "Uribarri",
neighbourhoods: [ "Castaños", "Matico-Ciudad Jardín", "Uribarri",
"Zurbaran-Arabella" ], }, { district: "Otxarkoaga-Txurdinaga", neighbourhoods:
["Otxarkoaga", "Txurdinaga"], }, { district: "Begoña", neighbourhoods:
["Begoña", "Bolueta", "Santutxu"], }, { district: "Ibaiondo", neighbourhoods: [
"Atxuri", "Bilbao La Vieja", "Casco Viejo", "Iturralde", "La Peña", "Miribilla",
"San Adrian", "San Francisco", "Buia", "Solokoetxe", "Zabala", ], }, { district:
"Abando", neighbourhoods: ["Abando", "Indautxu", "Abandoibarra"], }, { district:
"Recalde", neighbourhoods: [ "Ametzola", "Iralabarri", "Iturrigorri-Peñascal",
"Rekaldeberri", "Larraskitu", "Uretamendi", "Betolaza", ], }, { district:
"Basurto-Zorroza", neighbourhoods: [ "Altamira", "Basurto", "Olabeaga",
"Masustegui", "Zorroza", ], }, ]; %>
<!-- End Neighbourhoods -->

<div class="card position-fixed">
  <div class="card-body">
    <!-- Accordion -->
    <div class="accordion accordion-flush" id="accordionFlushExample">
      <form action="/" method="POST">
        <% for( let index = 0; index < neighbourhoods.length; index++ ) { %>
        <div
          class="accordion-header d-flex justify-content-between align-items-center"
          id="flush-heading<%=index%>"
        >
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapse<%=index%>"
            aria-expanded="false"
            aria-controls="flush-collapse<%=index%>"
          >
            <div><%= neighbourhoods[index].district %></div>
          </button>
          <div class="ms-1">
            <label class="form-check-label" for="district">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="district"
              />
            </label>
          </div>
        </div>
        <div class="accordion-item">
          <div
            id="flush-collapse<%=index%>"
            class="accordion-collapse collapse"
            aria-labelledby="flush-heading<%=index%>"
          >
            <div class="accordion-body">
              <ul class="list-group list-group-flush">
                <% for( let j = 0; j <
                neighbourhoods[index].neighbourhoods.length; j++ ) { %>
                <li class="list-group-item p-0">
                  <div class="form-check p-0">
                    <label
                      class="form-check-label d-flex justify-content-between"
                      for="neighbourhood"
                    >
                      <%= neighbourhoods[index].neighbourhoods[j]%>
                      <input
                        class="form-check-input"
                        type="checkbox"
                        value=""
                        id="neighbourhood"
                      />
                    </label>
                  </div>
                </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
        <% } %>
        <div class="mt-3 text-center">
          <a href="#" class="btn btn-bilbaotheme text-light">Search</a>
        </div>
      </form>
    </div>
  </div>
</div>

<% layout("layouts/boilerplate") %>
<div
  class="container-fluid d-flex justify-content-center align-items-center mt-5"
>
  <div class="row">
    <h1 class="text-center mb-4">Nuevo Post</h1>
    <div class="col-md-12">
      <div class="card shadow">
        <div class="card-body">
          <form
            action="/post"
            method="POST"
            novalidate
            class="validated-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label class="form-label" for="title">Título</label>
              <input
                class="form-control"
                type="text"
                name="post[title]"
                id="title"
                required
              />
              <div class="invalid-feedback">Porfavor escribe un título.</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="">Post</label>
              <textarea
                class="form-control"
                type="text"
                name="post[content]"
                id="post"
                required
              ></textarea>
              <div class="invalid-feedback">Porfavor escribe un post.</div>
            </div>
            <!-- Neighbourhoood Select -->
            <%- include("../partials/selectNeighbourhood")%>
            <!-- Neighbourhoood Select -->
            <div class="mb-3">
              <label for="image" class="form-label">Image</label>
              <input class="form-control" type="file" name="image" id="image" />
            </div>
            <!-- <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" name="post[image]" id="image" />
      </div> -->
            <div class="text-center mb-3">
              <button class="btn btn-success" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/neighbourhoods.js"></script>
<script src="/javascripts/neighbourhoodSelectBox.js"></script>

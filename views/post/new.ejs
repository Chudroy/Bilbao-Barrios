<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Post</h1>
  <div class="col-6 offset-3">
    <form action="/post" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          id="title"
          required
        />
        <div class="invalid-feedback">Please write a title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="">Post</label>
        <textarea
          class="form-control"
          type="text"
          name="post[content]"
          id="post"
          required
        ></textarea>
        <div class="invalid-feedback">Please write a post.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" name="post[image]" id="image" />
      </div>
      <div class="text-center mb-3">
        <button class="btn btn-success" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>

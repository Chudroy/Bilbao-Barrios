<% layout("layouts/boilerplate") %>
    <h1>Edit Campground</h1>
    <form action="/post/<%=post._id%>?_method=PUT" method="POST">
        <label for="title">Title</label>
        <input type="text" name="post[title]" id="title" value="<%=post.title%> ">
        <label for="">Post</label>
        <input type="text" name="post[content]" id="post" value="<%=post.content%> ">
        <button type="submit">Submit</button>
    </form>
    <a href="/post/<%=post._id%> ">Back to Post</a>
<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Post</h1>
  <div class="col-6 offset-3">
    <form action="/post/<%=post._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          id="title"
          value="<%=post.title%>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="">Post</label>
        <textarea
          class="form-control"
          type="text"
          name="post[content]"
          id="post"
          required
        >
<%=post.content%></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="post[image]"
          id="image"
          value="<%=post.image%>"
        />
      </div>
      <div class="text-center mb-3">
        <button class="btn btn-info" type="submit">Edit</button>
      </div>
    </form>
    <div class="text-center mb-3">
      <a href="/post/<%=post._id%> ">Back to Post</a>
    </div>
  </div>
</div>

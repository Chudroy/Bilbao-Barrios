<% layout("layouts/boilerplate") %>
<div class="row">
  <h4 class="text-center">Edit Post</h4>
  <div class="col-6 offset-3">
    <% if (post.image) { %>
    <div class="text-center">
      <img src="<%=post.image.thumbnail%>" alt="" />
    </div>
    <% } %>
    <form
      post.image.thumbnail
      action="/post/<%=post._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          id="title"
          value="<%=post.title%>"
          required
        />
        <div class="invalid-feedback">Please write a title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="">Post</label>
        <textarea
          class="form-control"
          type="text"
          name="post[content]"
          id="post"
          required
        >
<%=post.content%></textarea
        >
        <div class="invalid-feedback">Please write a post.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Edit Images</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          value="<%=post.image%>"
        />
      </div>
      <div class="text-center mb-3">
        <button class="btn btn-info" type="submit">Edit</button>
      </div>
    </form>
    <div class="text-center mb-3">
      <a href="/post/<%=post._id%> ">Back to Post</a>
    </div>
  </div>
</div>

<% layout("layouts/boilerplate") %>
<div class="row">
  <h4 class="text-center">Edit Post</h4>
  <div class="col-6 offset-3">
    <form
      action="/post/<%=post._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          id="title"
          value="<%=post.title%>"
          required
        />
        <div class="invalid-feedback">Please write a title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="">Post</label>
        <textarea
          class="form-control"
          type="text"
          name="post[content]"
          id="post"
          required
        >
<%=post.content%></textarea
        >
        <div class="invalid-feedback">Please write a post.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="post[image]"
          id="image"
          value="<%=post.image%>"
        />
      </div>
      <div class="text-center mb-3">
        <button class="btn btn-info" type="submit">Edit</button>
      </div>
    </form>
    <div class="text-center mb-3">
      <a href="/post/<%=post._id%> ">Back to Post</a>
    </div>
  </div>
</div>
<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll(".validated-form");

    // Loop over them and prevent submission
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>

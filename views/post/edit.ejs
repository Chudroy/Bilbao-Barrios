<% layout("layouts/boilerplate") %>
<div class="mb-3">
  <a href="/"><i class="bilbao-icon fa-solid fa-arrow-left-long fa-2xl"></i></a>
</div>

<div
  class="container-fluid d-flex justify-content-center align-items-center"
>
<div class="row">
  <h1 class="text-center mb-4">Editar Post</h1>
  <div class="col-md-12">
    <div class="card shadow">
    <div class="card-body">
      <% if (post.image) { %>
        <div class="text-center">
          <img src="<%=post.image.thumbnail%>" />
        </div>
        <% } %>
    <form
      action="/post/<%=post._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          id="title"
          value="<%=post.title%>"
          required
        />
        <div class="invalid-feedback">Please write a title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="">Post</label>
        <textarea
          rows="4"
          class="form-control"
          type="text"
          name="post[content]"
          id="post"
          required
        >
<%=post.content%></textarea
        >
        <div class="invalid-feedback">Please write a post.</div>
      </div>
      <%- include("../partials/selectNeighbourhood", {post})%>
      <div class="mb-3">
        <label class="form-label" for="image">Edit Images</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          value="<%=post.image%>"
        />
      </div>
      <div class="text-center mb-3">
        <button class="btn btn-success" type="submit">Edit</button>
      </div>
    </form>
  </div>
  </div>
    <div class="text-center mb-3">
      <a href="/post/<%=post._id%> ">Back to Post</a>
    </div>
  </div>
</div>
</div>

<script src="/javascripts/neighbourhoods.js"></script>
<script src="/javascripts/neighbourhoodSelectBox.js"></script>